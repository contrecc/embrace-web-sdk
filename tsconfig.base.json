{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "module": "commonjs",
    "newLine": "LF",
    "noEmit": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "target": "es2017",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "esModuleInterop": true,
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./**/*.test.ts",
    "./scripts/*.ts",
    "node_modules",
    "demo",
    "cli",
    "build"
  ]
}